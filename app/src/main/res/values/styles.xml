<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WideDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyleLarge">
        <item name="android:layout_width">@dimen/progress_bar_large_size</item>
        <item name="android:layout_height">@dimen/progress_bar_large_size</item>
    </style>

    <style name="ProgressBarStyleSmall">
        <item name="android:layout_width">@dimen/progress_bar_small_size</item>
        <item name="android:layout_height">@dimen/progress_bar_small_size</item>
    </style>

    <style name="ImagesBottomLayoutIconsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/images_button_layout_buttons_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TuningIconsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SortRadioButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="DialogButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/dialog_button_background</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
